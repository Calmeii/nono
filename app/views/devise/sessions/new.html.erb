<div class="myContainer" style="height: 100%; background-color: #2ecc71">
  <div id="fakeLoader"></div>
  <div class="container">
    <div class="login-logo" style="color: #ffffff;margin: 13% auto 0 auto;font-size: 30px;width: 160px;">
      Blog Park
    </div>

    <%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
        <div class="login-box" style="  margin: 1% auto 0 auto;padding: 20px 20px;height: 200px;
            width: 350px;border: solid 1px #eeeeee;background-color: #fff;">
          <div class="input-group">
            <%= f.email_field :email, autofocus: true, class: "form-control" %>
            <span class="input-group-addon" id="basic-addon1"><span class="glyphicon glyphicon-user"></span> </span>
          </div>
          <div class="input-group" style="margin-top: 20px">
            <%= f.password_field :password, autocomplete: "off", class: "form-control" %>
            <span class="input-group-addon" id="basic-addon2"><span class="glyphicon glyphicon-lock"></span> </span>
          </div>
          <div class="btn-group"  role="group" style="margin-top: 20px; width: 300px">
            <%= link_to "Sign up", new_registration_path(resource_name), class: "btn btn-lg btn-primary", style: "width:50%" %>
            <%= f.submit "Login", class: "btn btn-lg btn-primary", style: "width:50%"%>
          </div>
        </div>
    <% end %>


  </div>
</div>
<script type="text/javascript">
//  $("#fakeLoader").fakeLoader();

  $("#fakeLoader").fakeLoader({
    timeToHide:1200, //加载效果的持续时间
    zIndex:"999",//
    spinner:"spinner1",//可选值 'spinner1', 'spinner2', 'spinner3', 'spinner4', 'spinner5', 'spinner6', 'spinner7' 对应有7种效果
    bgColor:"#2ecc71", //加载时的背景颜色
    //    imagePath:"yourPath/customizedImage.gif" //自定义的加载图片，见demo8.html
  });
</script>
