<link rel="stylesheet" type="text/css" href="/style/user_info.css">

<div class="container" style="margin-top: 50px;width: 90%">
  <div class="row">
    <div class="col-md-8 col-sm-8 col-xs-8">
      <div class="main-bar">
        <div class="user-info">
          <h3><%=@user.username.to_s.force_encoding('utf-8')%></h3>
          <div class="user-info-logo">
            <img src="/image/0.jpg"/>
          </div>
          <div class="user-info-content">
            <div><span class="glyphicon glyphicon-home"></span> 北京 | 男</div>
            <div><span class="glyphicon glyphicon-education"></span> 北京大学</div>
            <div><span class="glyphicon glyphicon-arrow-right"></span> 查看详细资料</div>
          </div>
          <div class="user-info-bottom-a">
            <span>拥有22位粉丝</span>
            <button class="follow-button">关注</button>
          </div>
        </div>
        <div class="user-info-content-footer">
          <div class="flex-first"><span class="glyphicon glyphicon-home"></span></div>
          <div class="flex-item-b">文章 6</div>
          <div class="flex-item-c">收藏 20</div>
          <div class="flex-item-d">评论 50</div>
        </div>

      </div>
    </div>
    <div class="col-md-1 col-sm-1 col-xs-1"></div>
    <div class="col-md-3 col-sm-3 col-xs-3">
      <div class="side-bar">
        <div class="follow-info">
          <div class="follow-number">
            <p>关注了</p>
            <span>109 人</span>
          </div>
          <div class="followed-number">
            <p>关注者</p>
            <span>10200 人</span>
          </div>
        </div>
        <div class="latest-follow">
          <p>近期关注了这些用户</p>
          <div class="latest-follow-display">
            <img src="/image/1.jpg"/>
            <img src="/image/0.jpg"/>
            <img src="/image/1.jpg"/>
            <img src="/image/0.jpg"/>
            <img src="/image/1.jpg"/>
          </div>
        </div>
        <div class="watch-info">
          个人主页被 3162 人浏览
        </div>
      </div>
    </div>
  </div>
</div>