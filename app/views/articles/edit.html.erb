

<div class="container" style="margin-top: 50px">
  <div class="row">
    <div class="col-md-2"></div>
    <div class="col-md-8">
      <%= form_for @article, :url => article_path(@article), :html => {:method => :patch} do |f| %>
          <div class="input-group" style="margin-bottom: 20px">
            <%= f.text_field :title, placeholder: @article.title.to_s.force_encoding('utf-8'), class: 'form-control' %>
            <span class="input-group-addon" id="basic-addon1">title </span>
          </div>
          <%= f.text_area :content, placeholder: @article.content.to_s.force_encoding('utf-8'), id: 'article_content', rows:'15'%>
          <div class="btn-group"  role="group" style="margin-top: 20px; width: 100%">
            <%= f.submit "提交", class: "btn btn-lg btn-primary btn-block", style: "width:100%"%>
          </div>
      <% end %>
    </div>
    <div class="col-md-2"></div>
  </div>
</div>

<script>
  $(function(){
    $("#article_content").markdown({autofocus:false,savable:false})
  })
</script>