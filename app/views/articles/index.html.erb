<div class="container" style="margin-top: 50px">
  <div class="row">
  <div class="col-md-1"></div>
  <div class="col-md-10">
  <% id = 1 %>
  <% @articles.each do |article| %>
    <div class="panel">
      <div class="panel-heading">
        <div class="article_title">
          <%= article.title.to_s.force_encoding('utf-8') %>
        </div>
      </div>
      <div class="panel-body">
        <div class="article_content" id = "con<%=id%>"><%= article.content.to_s.force_encoding('utf-8') %>
        </div>
      </div>
      <div class="panel-footer panel-primary" style="overflow: auto">
        <%= link_to raw('<span class="glyphicon glyphicon-eye-open"></span> 查看'), article_path(article), style: 'margin-right:30px'%>
        <a href="#" style="float: right;"><%= article.user.username.to_s.force_encoding('utf-8') %></a>
      </div>
    </div>
    <% id = id+1 %>
  <% end %>
  </div>
  <div class="col-md-1"></div>
  </div>
</div>

<script>
  $(function(){
    var n = <%=id%>;
    for (var i = 1; i < n; i++) {
      var str = $("#con"+i).html();
      $("#con"+i).html(marked(str));
    }
  })

</script>














