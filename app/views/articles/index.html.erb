<div class="container" style="margin-top: 50px">
  <div class="row">
  <div class="col-md-2"></div>
  <div class="col-md-8">
  <% id = 1 %>
  <% @articles.each do |article| %>
    <div class="panel">
      <div class="panel-heading">
        <div class="article_title">
          <%= article.title.to_s.force_encoding('utf-8') %>
        </div>
      </div>
      <div class="panel-body">
        <div class="article_content" id = "con<%=id%>"><%= article.content.to_s.force_encoding('utf-8') %>
        </div>
      </div>
    </div>
    <% id = id+1 %>
  <% end %>
  </div>
  <div class="col-md-2"></div>
  </div>
</div>

<script>
  $(function(){
    var n = <%=id%>;
    for (var i = 1; i < n; i++) {
      var str = $("#con"+i).html();
      $("#con"+i).html(marked(str));
    }
  })

</script>














